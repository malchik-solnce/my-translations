<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:id="@id/eula_bottom" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <org.appforce.ui.VibratingButton android:id="@id/eula_yes" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/yes" android:layout_weight="1.0" />
        <org.appforce.ui.VibratingButton android:id="@id/eula_no" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/no" android:layout_weight="1.0" />
    </LinearLayout>
    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_above="@id/eula_bottom">
        <WebView android:id="@id/eula_eula" android:layout_width="fill_parent" android:layout_height="fill_parent" />
    </ScrollView>
</RelativeLayout>