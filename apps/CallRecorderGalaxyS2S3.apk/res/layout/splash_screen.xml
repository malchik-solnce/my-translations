<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="#ffffffff" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:gravity="center_horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/splash_screen_copyright" android:layout_alignParentBottom="true" style="@style/Text.Black" />
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <TextView android:gravity="center_horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/splash_screen_another_app" style="@style/Text.Blue.Bold" />
        <ImageView android:layout_gravity="center_horizontal" android:id="@id/splash_screen_site" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/surfer" />
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <ImageView android:layout_gravity="left" android:id="@id/splash_screen_twitter" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/twitter" />
            <TextView android:textSize="10.0dip" android:gravity="left" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/splash_screen_follow" style="@style/Text.Blue" />
        </LinearLayout>
        <TextView android:gravity="center_horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/splash_screen_stay_killer" style="@style/Text.Blue.Bold" />
    </LinearLayout>
</RelativeLayout>