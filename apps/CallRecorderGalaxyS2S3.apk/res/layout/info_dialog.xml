<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="horizontal" android:padding="10.0px" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:id="@id/info_format" android:tag="org.appforce.ui.SkipColorFilter" android:layout_width="64.0px" android:layout_height="64.0px" />
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="23.0px" android:textStyle="bold" android:gravity="center_horizontal" android:id="@id/info_name" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <TextView android:id="@id/info_path" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="200.0px" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:padding="10.0px" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:id="@id/info_type" android:tag="org.appforce.ui.SkipColorFilter" android:layout_width="32.0px" android:layout_height="32.0px" />
        <TextView android:textSize="20.0px" android:layout_gravity="center_vertical" android:id="@id/info_number" android:paddingLeft="10.0px" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </LinearLayout>
    <TableLayout android:padding="10.0px" android:layout_width="wrap_content" android:layout_height="wrap_content" android:stretchColumns="0,1">
        <TableRow>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Создана в: " />
            <TextView android:id="@id/info_created" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        </TableRow>
        <TableRow>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Продол-ть: " />
            <TextView android:id="@id/info_duration" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>
    <org.appforce.ui.VibratingButton android:id="@id/info_close" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="20.0px" android:layout_marginRight="20.0px" android:text="Закрыть" />
</LinearLayout>